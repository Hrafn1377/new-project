<body>
  <h1>Daily Rune Reading</h1>
  <button onclick="showRunes()">ðŸ”® Draw Runes</button>
  <div id="runeContainer"></div>

  <script>
    const runes = [
      { symbol: "áš ", name: "Fehu", meaning: "Wealth, abundance", upright: "Gain, success", reversed: "Loss, disappointment" },
      { symbol: "áš¢", name: "Uruz", meaning: "Strength, health", upright: "Power, endurance", reversed: "Weakness, illness" },
      { symbol: "áš¦", name: "Thurisaz", meaning: "Protection, conflict", upright: "Defense, resistance", reversed: "Aggression, danger" },
      { symbol: "áš¨", name: "Ansuz", meaning: "Wisdom, communication", upright: "Insight, clarity", reversed: "Confusion, miscommunication" },
      { symbol: "áš±", name: "Raido", meaning: "Journey, movement", upright: "Progress, travel", reversed: "Stagnation, delay" },
      { symbol: "áš²", name: "Kenaz", meaning: "Knowledge, creativity", upright: "Inspiration, enlightenment", reversed: "Ignorance, lack of vision" },
      { symbol: "áš·", name: "Gebo", meaning: "Gift, partnership", upright: "Generosity, balance", reversed: "Selfishness, imbalance" },
      { symbol: "áš¹", name: "Wunjo", meaning: "Joy, harmony", upright: "Happiness, fulfillment", reversed: "Discord, disappointment" }
    ];

    function drawRunes(numRunes) {
      const drawn = [];
      for (let i = 0; i < numRunes; i++) {
        const randomIndex = Math.floor(Math.random() * runes.length);
        const isReversed = Math.random() < 0.5;
        drawn.push({ rune: runes[randomIndex], reversed: isReversed });
      }
      return drawn;
    }

    function showRunes() {
      const container = document.getElementById("runeContainer");
      container.innerHTML = "";
      const drawnRunes = drawRunes(3);

      drawnRunes.forEach((runeObj, i) => {
        const card = document.createElement("div");
        card.className = "rune-card";
        card.style.animationDelay = `${i * 0.5}s`; // staggered reveal

        card.innerHTML = `
          <span class="rune-symbol">${runeObj.rune.symbol}</span>
          <h2>${runeObj.rune.name} ${runeObj.reversed ? "(Reversed)" : ""}</h2>
          <p><strong>Meaning:</strong> ${runeObj.rune.meaning}</p>
          <p><strong>${runeObj.reversed ? "Reversed" : "Upright"}:</strong> 
             ${runeObj.reversed ? runeObj.rune.reversed : runeObj.rune.upright}</p>
        `;
        container.appendChild(card);
      });
    }
  </script>
